			<column name="code" property="code" dataType="string" length="150" nullable="false" />
			<column name="language" property="language" dataType="string" length="5" nullable="false" />
			<column name="message" property="message" dataType="nstring" length="200" nullable="false" />
			<column name="priority" property="priority" dataType="byte" length="3" defaultValue="1" />
			
			<column name="create_user_id" property="createUserId" dataType="string" length="36" nullable="false" />
			<column name="create_user_name" property="createUserName" dataType="nstring" length="50" nullable="false" />
